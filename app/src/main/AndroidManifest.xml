<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="indi.mat.work.android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidStudy">
        <activity
            android:name=".ui.lifecycles.LifecyclesActivity"
            android:exported="true" />
        <activity
            android:name=".ui.launchmode.singletask.other.SingleTaskOtherActivity"
            android:exported="true"
            android:launchMode="singleTask" />
        <activity
            android:name=".ui.launchmode.singletask.SingleTaskThirdActivity"
            android:exported="true"
            android:launchMode="singleTask" />
        <activity
            android:name=".ui.launchmode.singletask.SingleTaskSecondActivity"
            android:exported="true"
            android:launchMode="singleTask" />
        <activity
            android:name=".ui.launchmode.singletask.SingleTaskFirstActivity"
            android:exported="true"
            android:launchMode="singleTask" />
        <activity
            android:name=".ui.launchmode.MainLaunchModeActivity"
            android:exported="true"
            android:launchMode="singleTask" />
        <activity
            android:name=".ui.drawer.DrawerLayoutActivity"
            android:exported="true"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.toolbar.ToolBarActivity"
            android:exported="true"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.mvc.LiveDataActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="indi.mat.work.android.ui.mvc.LIVE_DATA_START" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:label="@string/title_activity_login">
            <intent-filter>
                <action android:name="indi.mat.work.android.ui.login.LOGIN_START" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="indi.mat.work.android.ui.login.CATEGORY" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.profile.ProfileActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="indi.mat.work.android.ui.profile.PROFILE_START" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="indi.mat.work.android.ui.profile.CATEGORY" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.intent.IntentActivity"
            android:exported="true"
            android:label="@string/intent_activity_label">
            <intent-filter>
                <action android:name="indi.mat.work.android.ui.intent.INTENT_START" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.component.ComponentExampleActivity"
            android:exported="true"
            android:label="@string/component_example_activity_label">
            <intent-filter>
                <action android:name="indi.mat.work.android.ui.component.COMPONENT_EXAMPLE_START" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>